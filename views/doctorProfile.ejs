<!-- views/doctorDetails.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Doctor Details</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
  <div class="container mt-5">
    <h2>Doctor Details</h2>
    <div class="card mt-4 p-4">
      <img src="/uploads/<%= doctor.profile %>" class="img-thumbnail mb-3" alt="Doctor Profile" style="max-width: 200px;">
      <p><strong>Name:</strong> <%= doctor.firstName %> <%= doctor.lastName %></p>
      <p><strong>Experience:</strong> <%= doctor.experience %> years</p>
      <p><strong>Expertise:</strong> <%= doctor.expertise %></p>
      <p><strong>Address:</strong> <%= doctor.address %></p>
      <p><strong>Description:</strong> <%= doctor.description %></p>
      <p><strong>Date of Birth:</strong> <%= doctor.dob.toDateString() %></p>

      <!-- âœ… Edit Button -->
      <a href="/doctor/edit/<%= doctor._id %>" class="btn btn-primary mt-3">Edit</a>
    </div>
  </div>
</body>
</html>